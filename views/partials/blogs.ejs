<% let count = 0 %>
        <% blogs.forEach(blog => { %>
            <% count = count + 1 %>
        <% }) %> 
        
        <% for(let i=0;i<count;i=i+3) { %>
            <section class="service">
                <div class="row">
                    <% for(j=0;j<3;j++) { %>
                        <% if(i+j >= count) { %>
                            <% break %>
                            <% } %>
                        <div class = "service-col">
                            <div class="contents">
                                <h4 class="title"><%= blogs[i+j].title %></h4>
                                <div class="date">
                                    <%= blogs[i+j].createdAt.toLocaleDateString()+" "+blogs[i+j].createdAt.toLocaleTimeString([], { hour12: false, hour: '2-digit', minute: '2-digit' }) %>
                                </div>
                                <div class="author">
                                    <%= blogs[i+j].author %>
                                </div>
                                <p><div class="description"> <%= blogs[i+j].description.slice(0, 50) %> </div></p>
                                <button class="readmore"><a href="blogs/<%= blogs[i+j].id %>">Read More</a></button>
                            </div>
                        </div>
                        
                        <% } %>
                
                </div>
            </section>
            
        <% } %>